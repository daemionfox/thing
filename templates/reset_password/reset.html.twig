{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="col-6 offset-3 d-flex align-items-center justify-content-center pt-5">
    <div class="card col-12" id="login-screen">
        <div class="card-body">
            <div class="row m-3">
                <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>
            </div>
            {{ form_start(resetForm) }}
            <div class="row m-3">
                {{ form_row(resetForm.plainPassword) }}
            </div>
            <div class="row m-3">
                <button class="btn btn-primary"><i class="fas fa-key"></i> Reset password</button>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
</div>
{% endblock %}
