{% extends 'base.html.twig' %}

{% block title %}Update Vendor{% endblock %}

{% block header %}
    {% include 'header.html.twig' with user %}
{% endblock %}

{% block sidebar %}
    {% include 'sidebar.html.twig' with user %}
{% endblock %}

{% block body %}
    <div class="col-10 offset-1 d-flex align-items-center justify-content-center pt-5">
        <div class="card col-12" id="register-staff-screen">
            <div class="card-header">
                <h2>Update Vendor</h2>
            </div>
            <div class="card-body">

                {{ form_start(vendorForm) }}
                <div class="row">
                    <div class="col">
                        <h1 class="mb-3 font-weight-normal">{{ vendorForm.name.vars.value }}</h1>
                    </div>
                    <div class="col-3 float-end status status-{{ vendorForm.status.vars.value|lower }}">{{ form_row(vendorForm.status, {"label": " "}) }}</div>
                </div>
                <h3>Dealer Info</h3>
                {{ form_row(vendorForm.name) }}
                {{ form_row(vendorForm.productsAndServices) }}
                {{ form_row(vendorForm.taxid) }}
                {{ form_row(vendorForm.rating) }}
                {{ form_row(vendorForm.website) }}
                {{ form_row(vendorForm.twitter) }}
                <h3>Contact</h3>
                {{ form_row(vendorForm.vendorContact.firstName) }}
                {{ form_row(vendorForm.vendorContact.lastName) }}
                {{ form_row(vendorForm.vendorContact.emailAddress) }}
                <h3>Category</h3>
                {% for i in vendorForm.vendorCategories %}
                    {{ form_row(i) }}
                {% endfor %}
                <h3>Table Request</h3>
                {{ form_row(vendorForm.tableRequestType) }}
                {{ form_row(vendorForm.hasEndcap, {"label":"Requested Endcap"}) }}
                {{ form_row(vendorForm.NumAssistants, {"label": "Number of Assistants"}) }}
                {{ form_row(vendorForm.MatureDealersSection, {"label":"Mature Dealers Section"}) }}
                <h3>Requests</h3>
                {{ form_row(vendorForm.seatingRequests) }}
                {{ form_row(vendorForm.neighborRequests) }}
                {{ form_row(vendorForm.otherRequests) }}
                <h3>Other</h3>
                {{ form_row(vendorForm.ImageBlock, {"label": "Setup Images"}) }}

                <button class="btn btn-lg btn-primary" type="submit">Update Vendor</button>
                {{ form_end(vendorForm) }}
            </div>
        </div>
    </div>
{% endblock %}